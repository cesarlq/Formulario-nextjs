{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/Styles/*": [
        "./src/app/Styles/*"
      ],
      "@/Interfaces/*": [
        "./src/app/interfaces/*"
      ],
      "@/Components/*": [
        "./src/app/Components/*"
      ],
      "@/Hooks/*": [
        "./src/app/Hooks/*"
      ],
      "@redux/*": [
        "./src/app/redux/*"
      ],
      "@/services/*": [
        "./src/app/services/*"
      ],
      "@/redux/*": [
        "./src/app/redux/*"
      ],
      "@/reducers/*": [
        "./src/app/redux/reducers/*"
      ],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
