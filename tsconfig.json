{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",
    "paths": {
      "@styles/*": [
        "app/Styles/*"
      ],
      "@Interfaces/*": [
        "app/interfaces/*"
      ],
      "@Components/*": [
        "app/Components/*"
      ],
      "@Hooks/*": [
        "app/Hooks/*"
      ],
      "@redux/*": [
        "app/redux/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@reducers/*": [
        "app/redux/reducers/*"
      ],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
